<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_chat">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_aboutme_photo"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/about_me_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/kurnia_febrianto"
        app:layout_constraintTop_toBottomOf="@id/img_aboutme_photo"/>

    <TextView
        android:id="@+id/about_me_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@id/about_me_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>